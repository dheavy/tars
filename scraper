#!/usr/bin/env python
# -*- coding: utf-8 -*-

import os
import argparse
from tendo import singleton
from mypleasure.tars import Tars
from ConfigParser import ConfigParser
from pymongo import MongoClient
from multiprocessing.pool import ThreadPool as Pool


def parse_args():
  """Parse argument passed in CLI.

  Returns:
    The tuple of arguments (url, id, requester) passed in CLI.
  """
  mongo_url = os.environ.get('MONGOHQ_URL')

  if not mongo_url:
    config = ConfigParser()
    config.read('settings/settings.cfg')
    workers = config.get('app', 'workers')
  else:
    workers = os.environ['TARS_WORKERS']

  parser = argparse.ArgumentParser(description='Crawls and scrapes content from websites ("providers").')
  parser.add_argument('--url', type=str, help='url to scrape')
  parser.add_argument('--workers', type=int, default=workers, help='number of workers to use, ' + workers + ' by default - ideal number is twice the number of CPUs available on the machine')

  return parser.parse_args()



